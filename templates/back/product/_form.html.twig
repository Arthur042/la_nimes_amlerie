
<div class="container-fluid">

    <div class="mt-3 crudForm m-auto">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-xl-4">
                {{ form_row(form.title) }}
            </div>
            <div class="col-xl-4">
                {{ form_row(form.quantity) }}
            </div>
            <div class="col-xl-2">
                {{ form_row(form.isAvailable) }}
            </div>
            <div class="col-xl-2">
                {{ form_row(form.priceHt) }}
            </div>
            <div class="col-xl-4">
                {{ form_row(form.category) }}
            </div>
            <div class="col-xl-4">
                {{ form_row(form.mark) }}
            </div>
            <div class="col-xl-4">
                {{ form_row(form.tva) }}
            </div>
        </div>
        {{ form_row(form.littleDescription) }}
        {{ form_row(form.fullDescription) }}

        <button class="btn btn-success">{{ button_label|default('Ajouter') }}</button>
        {{ form_end(form) }}
    </div>

</div>

