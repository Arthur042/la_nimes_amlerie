{% extends 'back/base.html.twig' %}

{% block title %}Détail produit{% endblock %}

{% block body %}
    <div class="container">
        <div class="my-4 m d-flex justify-content-between align-items-center">
            <h1>Produit</h1>
            <a class="showEditLink" href="{{ path('app_admin_product_edit', {'id': product.id}) }}">Modifier</a>
        </div>

        <table class="table table-hover table-striped">
            <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Description courte</th>
                <td>{{ product.littleDescription }}</td>
            </tr>
            <tr>
                <th>Description complète</th>
                <td>{{ product.fullDescription|raw }}</td>
            </tr>
            <tr>
                <th>Prix hors taxe</th>
                <td>{{ product.priceHt }}€</td>
            </tr>
            <tr>
                <th>Tva</th>
                <td>{{ product.tva*100 }}%</td>
            </tr>
            <tr>
                <th>Quantité</th>
                <td>{{ product.quantity }}</td>
            </tr>
            <tr>
                <th>Disponibilité</th>
                <td>{{ product.isAvailable ? 'En stock' : 'Non disponible' }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ product.createdAt|date('Y-m-d')}}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ product.mark.name}}</td>
            </tr>
            <tr>
                <th>Catégories</th>
                <td>{{ product.category.name}}</td>
            </tr>
            <tr>
                <th>Note Moyenne</th>
                <td>
                    {% if note is null %}
                        il n'y a pas encore de commentaires
                    {% else %}
                        {{ note }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Total de ventes</th>
                <td>{{ totalSell }}</td>
            </tr>
            </tbody>
        </table>
    </div>

{% endblock %}
