        <h1>Détail de la commande</h1>
        <a href="{{ path('app_admin_ordered', {'id': ordered.id}) }}">Modifier</a>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ordered.id }}</td>
