
<div class="lna_product_item  {# todo display des cards #}">
    <a href="#">
        <div class="lna_card_img">
            <img src="{{ asset('build/images/product_item/product_five.png') }}" alt="image d'un produit">
        </div>
    </a>
    <div class="lna_card_body">
        <h3>{{ product.title|excerpt(20) }}</h3>
        <div class="lna_comment"> {# todo service d'affichage des étoile a la place du fichier#}
            <div class="star">
                {{ average|star|raw }}
            </div>
            <p>{{ product.comments|length }} avis</p>
        </div>
        <p>{{ product.priceHt }}€</p>
        <a href="#" class="lna_btn_main lna_btn_product lna_btn_dark">Ajouter</a>
    </div>
</div>
